@model TwitchStreamAnalyser.Models.StreamDetail
@{
    ViewData["Title"] = "Index";
}

@section Scripts {
    <script>
        $(document).ready(function () {
            setTimeout(refreshStreamStats, 5000);
        });

        function refreshStreamStats() {
            var request = $.ajax({
                method: 'GET',
                url: '@Url.Action("RefreshStreamData", "TwitchData")'
            });

            request.done(function (data) {
                $("#stream-data").html(data);
            });

            setTimeout(refreshStreamStats, 5000);
        }
    </script>
}

<div class="padded-container twitch-user float-left">
    <table>
        <tr>
            <td><img src="@Model.AvatarUrl" alt="@Model.Name" /></td>
            <td>@Model.Name</td>
        </tr>
    </table>
</div>

<div class="padded-container float-right">
    <a asp-action="Index" asp-controller="Config" class="settings-link"><i class="fas fa-cog"></i></a>
</div>

<div id="stream-data" class="padded-container">
    @if (Model.IsLive)
    {
        <partial name="_LiveInformationPartial" model="Model" />
    }
    else
    {
        <partial name="_OfflineInformationPartial" model="Model" />
    }
</div>